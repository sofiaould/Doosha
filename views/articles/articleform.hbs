<div id="form">
  <h2>Post my Article</h2>
  <form action="/homearticles" method="POST" enctype="multipart/form-data">
   <label for="input-image">Upload picture</label>
   <input type="file" name="image" id="input-image">

    <label for="input-title">Title</label>
    <input type="text" id="input-title" name="title" placeholder="Your title" />

    <label for="input-text">Text</label>
    <input type="text" id="input-text" name="text" placeholder="Your text" />

    <label for="input-date">Date</label>
    <input type="texte" id="input-date" name="date" placeholder="02/03/21" />
  
    <button type="submit">Share with the community</button>
    {{!-- <a href= "/articleselected">Share with the community</a> --}}
   
    

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>