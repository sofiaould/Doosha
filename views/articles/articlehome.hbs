<h1>Articles home</h1>

<a href= "/formarticle">Create your article</a>

<div class = "article-container">
{{#each articles}}
    <div class="article-content">
        <img src = "{{this.image}}"/>
        <p>{{this.title}}</p>
        <p>{{this.date}}</p>
        <a href="/articles/{{this._id}}">See more</a>
    </div>
{{/each}}
</div>
