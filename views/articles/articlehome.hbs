<link rel="stylesheet" href="./stylesheets/articleshome.css" />

<h1>Home articles</h1>

<a href="/formarticle" class ="create">Create your article</a>

<div class = "article-container">
  {{#each articles}}
  <div class="article-content">
    <img class="photo-article" src="{{this.image}}"/>
    <h3 class="h3">{{this.title}}</h3>
    <div class="identifiant">
     <img src="{{this.user.imageURL}}" class ="user-photo"alt="photo-user">
     <p>{{this.user.username}}</p>
     </div>
    <p>{{this.date}}</p>
    <a href="/articles/{{this._id}}">See more</a>
  </div>
  {{/each}}
</div>
