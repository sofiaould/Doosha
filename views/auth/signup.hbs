<link rel="stylesheet" href="./stylesheets/signup.css" />

<div id="form">
  <h2>Signup</h2>
  <form action="/signup" method="POST" enctype="multipart/form-data">
    <label for="input-username">Username</label>
    <input type="text" id="input-username" name="username" placeholder="Your username" />

    <label for="input-firstname">Firstname</label>
    <input type="text" id="input-firstname" name="firstname" placeholder="Your firstname" />

     <label for="input-name">Name</label>
    <input type="text" id="input-name" name="name" placeholder="Your Name" />

    <label for="input-email">Email</label>
    <input type="email" id="input-email" name="email" placeholder="Your email" />

    <label for="input-password">Password</label>
    <input type="password" name="password" id="input-password" placeholder="********" />
    
    <label for="input-image">Photo</label>
    <input type="file" name="image" id="input-image">

    <button type="submit">Create account</button>

    {{#if errorMessage}}
      <p class="error">{{errorMessage}}</p>
    {{/if}}
  </form>
</div>